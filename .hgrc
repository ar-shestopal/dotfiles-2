[ui]
username = Ches Martin <ches.martin@gmail.com>
ssh = ssh -C

[defaults]
log = --limit 20

[web]
style = monoblue
allow_archive = bz2, gz, zip
pygments_style = manni

[diff]
# so mq can handle add/remove/move, symlinks, lots of other stuff
git = 1

[extensions]
hgext.bookmarks =
hgext.color =
hgext.convert =
hgext.extdiff =
hgext.fetch =
hgext.graphlog =
hgext.hgk =
hgext.highlight =
hgext.mq =
hgext.pager =
# git-style ancestor references, e.g. foo^, foo~3:
hgext.parentrevspec =
hgext.rebase =
hgext.record =
hgext.transplant =
hgext.zeroconf =
#hgshelve = /usr/local/lib/hg/hgshelve/hgshelve.py
hgattic = /usr/local/lib/hg/attic.py
qct=/usr/local/lib/hg/qct.py

[alias]
# Thanks: http://wikis.sun.com/display/SunOnMac/MercurialTips
qstatus = status --rev -2:-1  # prints files changed (only) in the current patch
qclear = qrefresh -X re:.     # empty current patch, but leave the diffs in the working copy

[extdiff]
cmd.vdiff = fmdiff
# cmd.vdiff = meld
cmd.kdiff = kdiff3

[merge-tools]
kdiff3.args = $base $local $other -o $output
kdiff3.fixeol=True
kdiff3.gui=True

merge.checkconflicts=True
merge.priority=-10

filemerge.args=-left $other -right $local -ancestor $base -merge $output
filemerge.gui=True

[pager]
pager = LESS='FRX' less
attend = help, log, glog, status, qstatus, incoming, outgoing, diff, qdiff, cat, annotate, unshelve

[hgk]
path=~/bin/hgk
