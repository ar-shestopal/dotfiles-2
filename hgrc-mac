pygments_style = manni

[diff]
# so mq can handle add/remove/move
git = 1

[extensions]
hgext.alias =
hgext.mq =
hgext.extdiff =
hgext.hgk =
hgext.fetch =
hgext.record =
color =
highlight =

[alias]
# Thanks: http://wikis.sun.com/display/SunOnMac/MercurialTips
qstatus = status --rev -2:-1  # prints files changed (only) in the current patch
qclear = qrefresh -X re:.     # empty current patch, but leave the diffs in the working copy

[extdiff]
cmd.vdiff = fmdiff
cmd.kdiff = kdiff3

[merge-tools]
kdiff3.args = $base $local $other -o $output
kdiff3.fixeol=True
kdiff3.gui=True

merge.checkconflicts=True
merge.priority=-10

filemerge.args=-left $other -right $local -ancestor $base -merge $output
filemerge.gui=True

# Mercurial finds FileMerge just fine. Woot!
