[ui]
username = Ches Martin <ches.martin@gmail.com>
ssh = ssh -C

[web]
style = monoblue
allow_archive = bz2, gz, zip
pygments_style = manni

[diff]
# so mq can handle add/remove/move, symlinks, lots of other stuff
git = 1

[extensions]
hgext.alias =
hgext.color =
hgext.extdiff =
hgext.fetch =
hgext.graphlog =
hgext.hgk =
hgext.highlight =
hgext.mq =
hgext.pager =
hgext.rebase =
hgext.record =
# I'm having this issue with zeroconf on OS X:
# http://www.selenic.com/mercurial/bts/issue1421
#hgext.zeroconf =
hgshelve = /usr/local/lib/hg/hgshelve.py

[alias]
alias mq='hg -R $(hg root)/.hg/patches'
# Thanks: http://wikis.sun.com/display/SunOnMac/MercurialTips
qstatus = status --rev -2:-1  # prints files changed (only) in the current patch
qclear = qrefresh -X re:.     # empty current patch, but leave the diffs in the working copy

[extdiff]
cmd.vdiff = fmdiff
cmd.kdiff = kdiff3

[merge-tools]
kdiff3.args = $base $local $other -o $output
kdiff3.fixeol=True
kdiff3.gui=True

merge.checkconflicts=True
merge.priority=-10

filemerge.args=-left $other -right $local -ancestor $base -merge $output
filemerge.gui=True

[pager]
pager = LESS='FRX' less
ignore = serve, update, fetch, push, shelve, unshelve

[hgk]
path=/Users/ches/bin/hgk
